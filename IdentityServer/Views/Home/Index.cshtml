@section scripts{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.cookie.js"></script>
    <script type="text/javascript">
        $(function (e) {

            function DoLogin(e) {
                debugger;
                if ($.cookie("username") == null || e != undefined) {
                    $.ajax({
                        url: "http://localhost:51659/authenticate",
                        type: "POST",
                        data: JSON.stringify({
